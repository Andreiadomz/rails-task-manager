<div class="container" >
  <h3 class="p-3 display-3">New task</h3>
  <%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

<!--     <div class="form-group">
      <%= f.label :completed %>
      <%= f.text_field :completed, class: 'form-control' %>
    </div> -->

    <%= f.submit class: 'btn btn-primary'%>
  <% end %>
</div>

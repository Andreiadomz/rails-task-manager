

<h1 class="p-3 display-3">List of tasks</h1>

  <ul  style="list-style-type: none;>

    <% @tasks.each do |task| %>

    <li><% if task.completed %>

    <i class="far fa-check-square"></i>

    <% else %>

    <i class="far fa-square"></i>

    <% end %>


    <%= link_to task.title, task_path(task) %>

    <%= link_to task_path(task), method: :delete, class: 'text-primary', data: { confirm: 'Are you sure?' } do %>
        <i class="fas fa-trash-alt"></i>
    <% end %>

    <% end %>
  </li>

  </ul>

  <hr />

<p class="link-margin"><i class="fas fa-plus"></i><%= link_to " Add a new task", new_task_path %></p>


<h1 class="p-3 display-3">List of tasks</h1>


  <ul  style="list-style-type: none;>

    <% @tasks.each do |task| %>

    <li class=><% if task.completed %>

    <i class="far fa-check-square"></i>

    <% else %>

    <i class="far fa-square"></i>

    <% end  %>

    <%= task.title %></li>

    <% end %>

  </ul>

